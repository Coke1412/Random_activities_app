<p id="notice"><%= notice %></p>

<div class="container">

  <p>
    <strong>Name:</strong>
    <%= @category.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @category.description %>
  </p>

  <% if @category.image.attached? %>
  <p>
      <% @category.image.each do |image| %>
      <%= image_tag image.variant(resize:"400x400") %> <br> <br>
      <%= link_to 'Remove', delete_image_category_path(@category, image), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </p>
  <% end %>

  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Back', categories_path %>


</div>