<p id="notice"><%= notice %></p>



<h1 class="category-name display-2 text-center"> <u> Categories </u> </h1> <br>

  <%#  CATEGORIES CARDS %>

  <% @categories.each_slice(3) do |categories| %>
      
  <div class="row">
    <% categories.each do |category| %>

    
    <div class="card mr-2 mb-2 " style="width: 22rem;">
      <%= image_tag (category.image.variant(resize: "400x400")), class: "card-img-top" %>
      <div class="card-body">
        <p class="card-text category-name display-4 text-center"> 
          <%= category.name %>
        </p>
          
          <%= link_to 'Show', category %>
          <%= link_to 'Edit', edit_category_path(category) %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>

    <% end %>
  </div>

  <% end %>
<br>
<%= link_to 'Create New Category', new_category_path %>
