<p id="notice"><%= notice %></p>



<h1 class="category-name display-2 text-center"> <u> Categories </u> </h1> <br>

  <%#  CATEGORIES CARDS %>

  <% @categories.each_slice(3) do |categories| %>
      
    <div class="card-deck">
      <% categories.each do |category| %>

        <div class="card">
          
          <% if category.image.attached?  %>
            <div style="width: 22rem;">
              <%= image_tag category.image, class: "card-img-top" %>
            </div>
          <% end %>
          
          <div class="card-body">
            <p class="card-text category-name display-4 text-center"> 
              <%= category.name %>
            </p>
              
              <%= link_to 'Show', category %> |
              <%= link_to 'Edit', edit_category_path(category) %> |
              <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %>
          </div>
        
        </div>

      <% end %>
    </div>

  <% end %>
  
<br>
