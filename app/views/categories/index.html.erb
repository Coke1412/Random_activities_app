<p id="notice"><%= notice %></p>



<div class="row bg">

  <div class="col-12">

    <h1 class="display-2 text-center"> <u> Categories </u> </h1> <br>


    <%#  CATEGORIES CARDS %>

    <% @categories.each_slice(3) do |categories| %>
        
      <div class="card-deck">
        <% categories.each do |category| %>

          <div class="card mb-3">
            
            <% if category.image.attached?  %>
            <div>
              <%= image_tag category.image, class: "card-img-top" %>
            </div>
            <% end %>
            
            <div class="card-body overlay">
              <h5 class="card-title display-4 text-center"> <%= category.name %> </h5>
              <p class="card-text display-4 text-center"> </p>
              
                
                <%= link_to 'Show', category %> |
                <%= link_to 'Edit', edit_category_path(category) %> |
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %>
            </div>
          
          </div>

        <% end %>
      </div>

     <% end %>

  </div>

</div>
  
<br>
<%= link_to 'Create New Category', new_category_path %>
