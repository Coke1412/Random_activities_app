
<section class="container">

  <div class= "row">
    <%= form_with url: activities_users_path do |form| %>
      
      <div class="form-group">
          <%= form.label :category_id, class: 'text-white display-4 mr-5' %>
          <%= form.select :category_id, 
                          options_for_select(@categories),
                          multiple: true, 
                          prompt: "Select categories you are interested in",
                          class: 'form-input' %>
          <%= form.submit "Save", class: 'btn btn-info ml-5'%>
      </div>

      <div class="form-group mt-5">
          <%= form.label :activity_id, class: 'text-white display-4 mr-5'%>
          <%= form.select "activities", 
                          options_for_select(@activities),
                          multiple: true,
                          prompt: "Select activities you like to do"%>
          <%= form.submit "Save", class: 'btn btn-info ml-5'%>
      </div>

    <% end %>
  </div>

</section>