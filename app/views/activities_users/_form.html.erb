
<%= params %>

<section class="container">

    <div class= "row">
        <%= form_with url: activities_users_path do |form| %>
        
        <div class="form-group">
            <%= form.label :category_id %>
            <%= form.select :category_id, options_for_select(@categories), class: 'form-control' %>
        </div>

        <div class="actions">
            <%= form.submit "Save", class: 'btn btn-info'%>
        </div>

        <div class="form-group mt-5">
            <%= form.label :activity_id %>
            <%= form.select :activity_id, options_for_select(@activities) %>
        </div>

        <div class="actions">
            <%= form.submit "Save", class: 'btn btn-info'%>
        </div>

        <% end %>

    </div>

</section>