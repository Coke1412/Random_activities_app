<h2 class="container text-white font-italic">Log in</h2> <br>

<section class="container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'text-white font-italic' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email here' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'text-white font-italic' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter your password here' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'text-white font-italic' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-info' %>
  </div><br>
<% end %>

<%= render "devise/shared/links" %>

</section>